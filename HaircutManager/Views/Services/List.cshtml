@model IEnumerable<HaircutManager.Models.Service>
@{
    ViewData["Title"] = "List";
}
            @if (User.IsInRole("Admin") || User.IsInRole("Fryzjer"))
            {
                <p>
                    <a asp-action="Create">Create New</a>
                </p>
            }
<table class="table">
    <thead>
        <tr>
            <th>
             Numer
            </th>
            <th>
             Nazwa
            </th>
            <th>
             Opis
            </th>
            <th>
             Cena
            </th>
            <th>
             Średni czas wykonania
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvgTimeOfService)
                </td>
                @if (User.IsInRole("Admin") || User.IsInRole("Fryzjer"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ServiceId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.ServiceId">Delete</a>
                </td>
                }
            </tr>
        }
    </tbody>
</table>
