@using Microsoft.AspNetCore.Identity
@{
    ViewData["Title"] = "User Management";
}

<h2>@ViewData["Title"]</h2>

<!-- Dodaj przycisk do tworzenia nowego użytkownika -->
<div>
    <a asp-action="Create" class="btn btn-success">Create User</a>
</div>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (dynamic user in ViewBag.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    @foreach (var role in ViewBag.Roles as IEnumerable<IdentityRole>)
                    {
                        <a asp-action="Edit" asp-route-id="@user.Id" asp-route-roleName="@role.Name" class="btn btn-primary">@role.Name</a>
                    }
                    <a asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-warning">Change Password</a>
                </td>

            </tr>
        }
    </tbody>
</table>
