@page
@model HaircutManager.Areas.Identity.Pages.Account.LoginWithOTPModel
@{
	ViewData["Title"] = "Logowanie z OTP";
}
@inject IWebHostEnvironment env


<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="Email" readonly="true" hidden="true" />
                <div class="form-group">
                    <label asp-for="Input.OtpAnswer"></label>
                    <input asp-for="Input.OtpAnswer" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Input.OtpAnswer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}